// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
	"name": "quickstart",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"postCreateCommand": "sudo cp .devcontainer/quickstart/welcome.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {}, // for gh command to extract the URL of this instance
		"ghcr.io/devcontainers/features/java:1": {
			"version": "17", // Hardcoded to 17 due to bug: https://github.com/devcontainers/features/issues/1134
			"installMaven": "true"
		}
	},
	"portsAttributes": {
		"2113": {
			"label": "EventStoreDB Admin UI",
			"onAutoForward": "notify"
		},
		"1113": {
			"label": "EventStoreDB API",
			"onAutoForward": "silent"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"extensions.ignoreRecommendations": true,
				"telemetry.enableTelemetry": true,
				"telemetry.telemetryLevel": "off"				
			}
		},
		"codespaces": {
			"openFiles": []
		}
	}	
}
